# Display
set adjust-open "width"
set font "DejaVu Sans Mono normal 9"

# Zenburn theme
set default-bg "#1f1f1f"
set default-fg "#dcdccc"
set inputbar-bg "#709080"
set inputbar-fg "#dcdccc"
set statusbar-bg "#1f1f1f"
set statusbar-fg "#709080"

# Whether to recolor pages
set recolor false
set recolor-darkcolor "#dcdccc"
set recolor-lightcolor "#1f1f1f"
