[alias]
    br = branch
    bd = branch -d
    bdd = branch -D
    bv = branch -vv
    co = checkout
    cob = checkout -b
    com = checkout master
    ca = commit -a --amend
    can = commit -a --amend --no-edit
    ci = commit
    cs = commit -a -s
    d = diff
    ds = diff --stat
    dst = diff --stat
    f = fetch
    fp = fetch --prune
    fu = fetch upstream
    lf = ls-files
    lg = log --graph --pretty=format:'%C(yellow)%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset%C(bold blue)<%an>%Creset' --color
    lh = log --graph --pretty=format:'%C(yellow)%H%Creset %Cgreen%cd%Creset %C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --date=iso --color
    ll = log --stat --pretty=format:'%C(yellow)%h %Cgreen%cr%Creset%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset'
    lo = log --oneline
    lt = "!f(){ git lg -10; };f"
    p = pull
    pp = pull --prune
    pum = pull upstream master
    re = rebase
    rem = rebase master
    rbm = "!f(){ git checkout master && git pull && git checkout ${1} && git rebase -i master; };f"
    ri = rebase -i
    rim = rebase -i master
    rt = remote
    rv = remote -v
    sh = show
    shst = show --stat
    s = status --short --branch
    st = status
    sti = status --ignored
    sb = "!f(){ git bv && echo && git dst; };f"
    sm = submodule
    sma = submodule add
    sms = submodule sync
    smu = submodule update
    sf = submodule foreach
    v = review
    vd = review -d
    vl = review -l
    wt = worktree
    wa = worktree add
    wl = worktree list
    wp = worktree prune
