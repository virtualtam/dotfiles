[alias]
br = branch
ba = branch -a
bd = branch -d
bdd = branch -D
bv = branch -vv
bva = branch -vv -a

co = checkout
cob = checkout -b
com = checkout master

ca = commit -a --amend
can = commit -a --amend --no-edit
ci = commit
cs = commit -a -s
csm = commit -a -s -m

d = diff
dm = diff master
ds = diff --stat
dsm = diff --stat master
dw = diff --word-diff=color
dwm = diff --word-diff=color master

f = fetch
fav = fetch --all -v
fp = fetch --prune
fu = fetch --prune upstream

gh  = "!f() { git com && git fetch origin pull/${1}/head:pr-${1} && git checkout pr-${1}; }; f"
ghu = "!f() { git com && git fetch upstream pull/${1}/head:pr-${1} && git checkout pr-${1}; }; f"

lf = ls-files

lg = log --graph --pretty=format:'%C(yellow)%h%Creset%C(yellow)%d%Creset %s %Cgreen(%cr)%Creset%C(bold blue)<%an>%Creset' --color
lh = log --graph --pretty=format:'%C(yellow)%H%Creset %Cgreen%cd%Creset %C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset' --date=iso --color
ll = log --stat --pretty=format:'%C(yellow)%h %Cgreen%cr%Creset%C(yellow)%d%Creset %s %C(bold blue)<%an>%Creset'
lo = log --oneline
lt = "!f(){ git --no-pager lg -10; };f"
my = !git ll --author=$USER --since='9am yesterday' --all

p = pull
pp = pull --prune
pum = pull upstream master

psu = push --set-upstream

re = rebase
rem = rebase master
rbm = "!f(){ git checkout master && git pull && git checkout ${1} && git rebase -i master; };f"
ri = rebase -i
rim = rebase -i master

rt = remote
rv = remote -v
rh = reset --hard
rhom = reset --hard origin/master

sh = show
shst = show --stat

sl = shortlog
snes = shortlog -nes

s = status --short --branch
st = status
sti = status --ignored
sb = "!f(){ git bv && echo && git dsm; };f"

sm = submodule
sma = submodule add
smi = submodule init
sms = submodule sync
smu = submodule update
smui = submodule update --init
sf = submodule foreach

v = review
vd = review -d
vl = review -l

wt = worktree
wa = worktree add
wl = worktree list
wp = worktree prune
